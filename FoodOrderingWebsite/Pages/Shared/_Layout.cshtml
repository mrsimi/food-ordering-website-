<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrdFod</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/site/dist/bootstrap.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css"
              asp-fallback-href="~/site/dist/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute"
              crossorigin="anonymous"
              integrity="sha256-eSi1q2PG6J7g7ib17yAaWMcrr5GrtohYChqibrV7PBE=" />
    </environment>
    <link rel="stylesheet" href="~/site/css/styles.css" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="#">ORFOD</a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapseContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapseContent">

                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item mr-3">
                            <a class="nav-link" asp-page="./Index">Home</a>
                        </li>
                        <li class="nav-item mr-3">
                            <a class="nav-link" asp-page="./CartPage">Cart</a>
                        </li>
                        <li class="nav-item mr-3">
                            <a class="nav-link" asp-page="./TrackOrders">Track Orders</a>
                        </li>
                        <li class="nav-item mr-3">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="all-content">
        <partial name="_CookieConsentPartial" />
        <main>
            @RenderBody()
        </main>
    </div>


    <environment include="Development">

        <script src="~/site/dist/jquery-3.3.1.slim.min.js"></script>
        <script src="~/site/dist/popper.min.js"></script>
        <script src="~/site/dist/bootstrap.min.js"></script>

    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"
                asp-fallback-src="~/site/dist/jquery-3.3.1.slim.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=">
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"
                asp-fallback-src="~/site/dist/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha256-E/V4cWE4qvAeO5MOhjtGtqDzPndRO1LBk8lJ/PR7CA4=">
        </script>
    </environment>
    


    @RenderSection("Scripts", required: false)
</body>
</html>
